<div class="tituloEdicao">Imagem da receita</div>
<div>
    <input 
        type="url" 
        name="image"
        placeholder="http://"
        value="{{ recipe.image }}"
    >    
</div>

<div class="tituloEdicao">Ingredientes</div>
{% for ingredient in recipe.ingredients %}
    <input
        type="text"
        name="ingredients"
        value="{{ ingredient }}"
    >
{% endfor %}

<div class="acao"><a href="#">Adicionar novo ingrediente</a></div>

<div class="tituloEdicao">Modo de preparo</div>
{% for preparation in recipe.preparation %}
<input
    type="text" 
    name="preparation"
    value="{{ preparation }}"
>
{% endfor %}

<div class="acao"><a href="#">Adicionar novo passo</a></div>

<div class="tituloEdicao">Informações adicionais</div>
<textarea 
    name="information" 
    rows="10" 
    cols="100">
    {{ recipe.information }}
</textarea>