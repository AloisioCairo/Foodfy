<div class="tituloEdicao">Imagem da receita</div>
<div>
    <input 
        type="url" 
        name="image"
        placeholder="http://"
        value="{{ recipe.image }}"
    >    
</div>

<div class="tituloEdicao">Ingredientes</div>
{% if recipe.ingredients %}    
    {% for ingredient in recipe.ingredients %}
        <div id="ingredients">
            <div class="ingredient">
                <input
                    type="text"
                    name="ingredients"
                    value="{{ ingredient }}"
                >
            </div>
        </div>
    {% endfor %}
{% else %}
    <div id="ingredients">
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                required="required"
            >
        </div>
    </div>
{% endif %}

<div class="acao add-ingrediente"><a href="#">Adicionar novo ingrediente</a></div>

<div class="tituloEdicao">Modo de preparo</div>
{% if recipe.preparation %}
    {% for preparation in recipe.preparation %}
        <div id="modosPreparo">
            <div class="modoPreparo">
                <input
                    type="text" 
                    name="preparation"
                    value="{{ preparation }}"
                >
            </div>
        </div>
    {% endfor %}
{% else %}
    <div id="modosPreparo">
        <div class="modoPreparo">
            <input
                type="text" 
                name="preparation[]"
                required="required"
            >
        </div>
    </div>
{% endif %}

<div class="acao add-modo-preparo"><a href="#">Adicionar novo passo</a></div>

<div class="tituloEdicao">Informações adicionais</div>
<textarea 
    name="information" 
    rows="10" 
    cols="100">
    {{ recipe.information }}
</textarea>