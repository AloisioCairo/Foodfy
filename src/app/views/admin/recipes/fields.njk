<div class="tituloEdicao">Nome</div>
<div>
    <input 
        type="text" 
        name="title"
        value="{{ recipe.title }}"
    >    
</div>

<div class="tituloEdicao">Imagem da receita</div>
<div id="galeriaReceita">
    <div id="photos-upload">
        <div id="addImgReceita">
            <i class="material-icons">add</i>
        </div>
        <input
            id="photos-input"
            type="file"
            name="photos"
            multiple
            accept="image/*"
            onchange="PhotosUpload.handleFileInput(event)"
        >
        
    </div>


    <div id="photos-preview">
        {% if files %}
            {% for image in files %}
                <div class="photo" id="{{ image.id }}">
                    <img src="{{ image.src }}" alt="{{ image.name }}">
                    <i class="material-icons"
                        onclick="PhotosUpload.removeOldPhoto(event)"
                    >
                    close
                    </i>
                </div>
            {% endfor %}
            <input type="hidden" name="removed_files">
        {% endif %}
    </div>

</div>

<div class="tituloEdicao">Chefe</div>
<div>
    <select name="chef">
        {% for chef in chefOptions %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %}selected{% endif %}>
                {{chef.name}}
            </option>
        {% endfor %}
    </select>
</div>

<div class="tituloEdicao">Ingredientes</div>
{% if recipe.ingredients %}    
    {% for ingredient in recipe.ingredients %}
        <div id="ingredients">
            <div class="ingredient">
                <input
                    type="text"
                    name="ingredients"
                    value="{{ ingredient }}"
                >
            </div>
        </div>
    {% endfor %}
{% else %}
    <div id="ingredients">
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                required="required"
            >
        </div>
    </div>
{% endif %}

<div class="acao add-ingrediente">
    <a href="#">Adicionar novo ingrediente</a>
</div>

<div class="tituloEdicao">Modo de preparo</div>
{% if recipe.preparation %}
    {% for preparation in recipe.preparation %}
        <div id="modosPreparo">
            <div class="modoPreparo">
                <input
                    type="text" 
                    name="preparation"
                    value="{{ preparation }}"
                >
            </div>
        </div>
    {% endfor %}
{% else %}
    <div id="modosPreparo">
        <div class="modoPreparo">
            <input
                type="text" 
                name="preparation[]"
                required="required"
            >
        </div>
    </div>
{% endif %}

<div class="acao add-modo-preparo"><a href="#">Adicionar novo passo</a></div>

<div class="tituloEdicao">Informações adicionais</div>
<textarea 
    name="information" 
    rows="10" 
    cols="100">
    {{ recipe.information }}
</textarea>