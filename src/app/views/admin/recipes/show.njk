{% extends "../header.njk" %}

{% block content %}
  <div class="recipe">
    <div class="container">
      <div class="content">
        
        <div class="show">
          <h2>Receita: {{ recipe.title }}</h2>
          
          <div class="botaoEditar">
            <a href="/admin/recipes/{{ recipe.id }}/edit">Editar receita</a>
          </div>
        </div>

        <div class="centralizar">
          <img class="imgReceitaDet" src="{{ recipe.image }}"/>
          <div class="tituloAdmin">
            {{ recipe.title }}
          </div>
          <div class="autorDetalhe">
            por {{ recipe.name }}
          </div>
        </div>
        
        <div class="ingredienteReceita">
          <h3>Ingredientes</h3>
          <span class="mostrarEsconder"><a href="#">Mostrar</a></span>

          <div class="itemIngredienteReceita">
            {% for ingredient in recipe.ingredients %}
              <li>- {{ ingredient }}</li>
            {% endfor %}
          </div>
        </div>

        <h3>Modo de preparo</h3>
          
          {% for preparation in recipe.preparation %}
            <li>- {{ preparation }}</li>
          {% endfor %}

        <h3>Informações adicionais</h3>
          <span class="informacao">{{ recipe.information }}</span>
      </div>
    </div>
  </div>
{% endblock content %}