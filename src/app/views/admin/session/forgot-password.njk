{% include "./header.njk" %}

{% block content %}
    
    <section class="password container form">
        <form method="POST" action="./forgot-password">
            
            <div class="header">
                <h3>Esqueceu a senha?</h3>
            </div>
            
            <div class="tituloEdicao">E-mail</div>
            <div class="input">
                <input 
                    type="email" 
                    name="email"
                    placeholder="Digite seu email cadastrado para recuperar sua senha"
                    value="{{ user.email }}"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
            
            <div class="footer">
                <span></span>
                <button class="botaoSessao" type="submit">Recuperar</button>
            </div>

        </form>
    </section>
    
{% endblock content %}
