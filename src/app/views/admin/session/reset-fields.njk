<div class="tituloEdicao">E-mail</div>
<div class="input">
    <input 
        type="email" 
        name="email"
        placeholder="Digite seu e-mail"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
    >
</div>

<div class="tituloEdicao">Senha</div>
<div class="input">
    <input
        type="password"
        name="password"
        placeholder="Digite uma nova senha"
    >
</div>

<div class="tituloEdicao">Repetir da senha</div>
<div class="input">
    <input
        type="password"
        name="passwordRepeat"
        placeholder="Repita a nova senha"
    >
</div>

<input type="hidden" name="token" value="{{ token }}">