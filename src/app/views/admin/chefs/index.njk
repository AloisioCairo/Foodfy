{% extends "../header.njk" %}

{% block content %}
  <div class="container">
    
    <div class="tituloAdm">
      <h2>Gerenciar chefes</h2>

      <div>
          <form action="#" method="GET">
              <input 
                  type="text" 
                  name="filter"
                  placeholder="Filtrar pelo nome do chefe"
                  value="{{filter}}"
              >
              <button type="submit">Buscar</button>
          </form>
      </div>
    </div>
    
    <div class="listaChefeAdm">
      
      {% for chef in chefs %}
          
          <img class="avatarChefe" src="{{ chef.img }}" />

          <div class="dadosInline">
            <div class="nomeChefeAdm">{{ chef.name }}</div>
            <div><a href="/admin/chefs/{{ chef.id }}">Visualizar</a></div>
          </div>

        {% endfor %}
    <div>
  </div>
{% endblock content %}