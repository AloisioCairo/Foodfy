{% extends "../header.njk" %}

{% block content %}
  <div class="container">
    
    <h2 class="tituloAdm">Gerenciar chefes</h2>
    
    <div class="listaChefeAdm">
      
      {% for chef in chefs %}
          
          <img class="avatarChefe" src="{{ chef.avatar_url }}" />

          <div class="dadosInline">
            <div class="nomeChefeAdm">{{ chef.name }}</div>
            <div class="detalheChefe"><a href="/admin/chefs/{{ chef.id }}">Visualizar</a></div>
          </div>

        {% endfor %}
    <div>
  </div>
{% endblock content %}