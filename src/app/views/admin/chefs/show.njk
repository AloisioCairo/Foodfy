{% extends "../header.njk" %}

{% block content %}
  <div class="container">
    <div class="content">
      <div class="showDados">
        <h2>Chefe: {{ chef.name }}</h2>
        
        <div class="botaoEditar">
          <a href="/admin/chefs/{{ chef.id }}/edit">Editar chefe</a>
        </div>
      </div>

      <div class="centralizar">
        <img class="avatarDetalheChefe" src="{{ files[0].src }}"/>
        <div class="tituloAdmin">
          {{ chef.name }}
        </div>
        <div class="autorDetalhe">
          {{ chef.qtde_receitas }} receitas
        </div>
      </div>

      <h3 class="mt-20px">Receitas</h3>

      <div class="listaReceitasChefe mt-20px">
        
        {% for recipe in recipesChef %}
                    
          <img class="imgReceitaChefe" src="{{ recipe.image }}" />

          <div class="dadosInline">  
            <div class="nomeChefeAdm" id="temp">              
              {{ recipe.title }}
            </div>

            <div class="autorReceita">
              por {{ chef.name }}
            </div>

            <div>
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
          </div>
        
        {% endfor %}

      </div>

    </div>
  </div>
{% endblock content %}