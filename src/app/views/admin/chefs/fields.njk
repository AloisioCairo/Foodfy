<div class="tituloEdicao">Nome</div>
<div>
    <input 
        type="text" 
        name="name"
        value="{{ chef.name }}"
    >    
</div>

<div class="tituloEdicao">Avatar</div>

{% if chef %}
<div>
    <input 
        type="text" 
        name="path"
        value="{{ chef.path }}"
    >    
</div>
{% endif %}

<div class="mt-10px fotoChefe">
    <input
        id="photo-input"
        type="file"
        name="photo"
        multiple
        accept="image/*"
    >
    <p>Enviar avatar</p>
</div>